<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/nakamap_custom_dialog_padding_left"
    android:paddingRight="@dimen/nakamap_custom_dialog_padding_right"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nakamap_padding_high"
        android:paddingBottom="@dimen/nakamap_padding_high"
        android:orientation="horizontal"
        android:background="@color/nakamap_white"
        >
        <ProgressBar
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" 
            android:layout_marginLeft="@dimen/nakamap_margin_high"
            android:indeterminate="true"
            style="@android:style/Widget.ProgressBar.Inverse"
            />
        <TextView 
            android:id="@+id/nakamap_custom_progress_dialog_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/nakamap_margin_high"
            style="@style/nakamap_textview_gray_very_large_shadow_white"
            />
    </LinearLayout>
</FrameLayout>
