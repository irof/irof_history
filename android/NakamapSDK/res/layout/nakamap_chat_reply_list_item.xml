<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/nakamap_chat_reply_root_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/nakamap_chat_list_left_item"
            layout="@layout/nakamap_chat_list_left_item" />

        <include
            android:id="@+id/nakamap_chat_list_right_item"
            layout="@layout/nakamap_chat_list_right_item" />

        <include
            android:id="@+id/nakamap_chat_reply_list_left_item"
            layout="@layout/nakamap_chat_reply_list_left_item" />

        <include
            android:id="@+id/nakamap_chat_reply_list_right_item"
            layout="@layout/nakamap_chat_reply_list_right_item" />
    </LinearLayout>

</FrameLayout>