<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nakamap_group_list_row_height"
    android:layout_gravity="top|left"
    android:paddingLeft="@dimen/nakamap_padding_middle"
    android:paddingRight="@dimen/nakamap_padding_middle"
    android:paddingTop="@dimen/nakamap_padding_low" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/nakamap_base_list" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/nakamap_group_list_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/nakamap_margin_middle"
                android:src="@drawable/nakamap_ico_btn_addfriend" />

            <TextView
                android:id="@+id/nakamap_group_list_header_text"
                style="@style/nakamap_textview_black_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/nakamap_invite_friend" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>