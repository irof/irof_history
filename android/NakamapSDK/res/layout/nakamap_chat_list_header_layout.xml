<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/nakamap_chat_members_header_padding"
    android:background="@color/nakamap_gray_light"
    android:orientation="horizontal"
    android:id="@+id/nakamap_chat_header_holder"
    >
    <com.kayac.libnakamap.components.ImageLoaderView
        android:id="@+id/nakamap_chat_list_header_group_icon"
        android:layout_width="@dimen/nakamap_chat_members_header_group_icon_size"
        android:layout_height="@dimen/nakamap_chat_members_header_group_icon_size"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/nakamap_chat_members_header_member_icon_margin"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/nakamap_chat_list_members_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nakamap_group_memo"
            style="@style/nakamap_textview_black_default_singleline"
            />
        <LinearLayout
            android:id="@+id/nakamap_chat_list_members_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>
