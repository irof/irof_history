<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView 
        android:id="@+id/nakamapsdk_badge_background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/nakamapsdk_background_chat"
        />
    <RelativeLayout 
        android:id="@+id/nakamapsdk_badge_unread_groups_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nakamapsdk_cloud"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="42dp"
        >
        <TextView
            android:id="@+id/nakamapsdk_badge_unread_groups_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="9+"
            android:textSize="8sp"
            android:textColor="#FFFFFF"
            />
    </RelativeLayout>
</merge>
